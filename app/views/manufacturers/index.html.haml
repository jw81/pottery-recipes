%h1
  Listing Manufacturers
%p
  = link_to('Add New Manufacturer', new_manufacturer_path)
%table
  %tr
    %th
      Name
    %th
      Description
    %th{ colspan: 3 }
  - @manufacturers.each do |manufacturer|
    %tr
      %td
        = manufacturer.name
      %td
        = manufacturer.description
      %td
        = link_to('Show', manufacturer_path(manufacturer))
      %td
        = link_to('Edit', edit_manufacturer_path(manufacturer))
      %td
        = link_to('Destroy', manufacturer_path(manufacturer), method: :delete, data: { confirm: 'Are you sure?' })
