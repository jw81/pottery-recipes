.nested-fields
  .field
    = f.label :glaze_id
    %br
    = f.collection_select(:glaze_id, Glaze.all, :id, :name, { prompt: "Select Glaze" } )
  .field
    = f.label :coat_type
    %br
    = f.collection_select(:coat_type, Layer::COAT_TYPES, :to_s, :to_s, { prompt: "Select Glaze" } )
  = link_to_remove_association 'remove layer', f
