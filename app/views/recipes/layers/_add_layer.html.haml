      .modal-body
        = form_for(:layer, url: recipe_layers_path(recipe_id: recipe.id), method: :post, html: { id: 'add-layer-form' }) do |f|
          = select_tag 'coat_type', options_for_select(['Bottom', 'Top'])
          = f.collection_select(:glaze_id, Glaze.all, :id, :name, { prompt: "Select Glaze" }, { name: 'glaze_id' })
