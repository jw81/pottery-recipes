%h1
  Listing Glazes
%p
  = link_to('Add New Glaze', new_glaze_path)
%table
  %tr
    %th
      Name
    %th
      Brand Name
    %th{ colspan: 3 }
  - @glazes.each do |glaze|
    %tr
      %td
        = glaze.name
      %td
        = glaze.brand_name
      %td
        = link_to('Show', glaze_path(glaze))
      %td
        = link_to('Edit', edit_glaze_path(glaze))
      %td
        = link_to('Destroy', glaze_path(glaze), method: :delete, data: { confirm: 'Are you sure?' })
